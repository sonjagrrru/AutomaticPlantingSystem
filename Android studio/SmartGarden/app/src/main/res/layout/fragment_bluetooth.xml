<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bluetoothFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE6B3"
    tools:context=".fragments.bluetooth.BluetoothFragment">

    <ListView
        android:id="@+id/selectDevice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/selectDeviceRefresh"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="#90D692"
        android:fontFamily="sans-serif-black"
        android:text="Osveži listu uređaja"
        android:textSize="16sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>